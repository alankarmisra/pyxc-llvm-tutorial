# RUN: %pyxc -i %s > %t 2>&1
# RUN: grep -q "Error (Line:" %t
# RUN: grep -q "fgets expects i32 length argument" %t

def main() -> i32:
    f: ptr[void] = fopen("chapter23_io_d.txt", "w")
    fputs("z\n", f)
    fclose(f)

    f = fopen("chapter23_io_d.txt", "r")
    buf: ptr[i8] = malloc[i8](8)
    n: f64 = 8.0
    fgets(buf, n, f)
    free(buf)
    fclose(f)
    return 0

main()
